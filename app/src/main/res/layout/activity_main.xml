<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff">

        <View
            android:layout_width="match_parent"
            android:layout_height="343dp"
            android:background="@drawable/gradient"
            app:layout_constraintBottom_toBottomOf="@+id/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="174dp"
            android:layout_height="174dp"
            android:background="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.434"

            android:contentDescription="logo" />

        <TextView
            android:id="@+id/textbox1"
            android:layout_width="243dp"
            android:layout_height="34dp"
            android:text="Indian News Express"
            android:textColor="@color/black"
            android:textFontWeight="100"
            android:textSize="25.38sp"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/satoshi"

            />

        <TextView
            android:id="@+id/textbox2"
            android:layout_width="221dp"
            android:layout_height="18dp"
            android:text="Lorem ipsum lorem ipsum lorem ipsum"
            android:fontFamily="@font/satoshi"
            app:layout_constraintTop_toBottomOf="@id/textbox1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="@id/textbox1"
            />


        <Button
            android:id="@+id/btn_splash_screen"
            android:layout_width="187dp"
            android:layout_height="45dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/button_background"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="4dp"
            android:text="Continue"
            android:textColor="@android:color/white"
            android:textSize="15.29dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textbox2" />


</androidx.constraintlayout.widget.ConstraintLayout>