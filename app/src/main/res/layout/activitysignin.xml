<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup"
    android:background="@color/white">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/logosmall"
        android:contentDescription="logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/textbox1"
        android:layout_width="210dp"
        android:layout_height="29dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/satoshi"
        android:text="Indian News Express"
        android:textColor="@color/black"
        android:textFontWeight="1"
        android:textSize="21.47sp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <TextView
        android:id="@+id/textbox2"
        android:layout_width="173dp"
        android:layout_height="15dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/satoshi"
        android:text="Lorem ipsum lorem ipsum lorem ipsum"
        android:textSize="11.34sp"
        android:textColor="#5A5656"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textbox1"
        app:layout_constraintTop_toTopOf="@id/textbox1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="69dp"
        android:layout_height="29dp"
        android:fontFamily="@font/satoshi"
        android:text="Sign in"
        android:textColor="@color/black"
        android:textSize="21.47sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textbox2"
        app:layout_constraintVertical_bias="0.072" />

    <ImageView
        android:layout_width="7dp"
        android:layout_height="38dp"
        android:background="@drawable/bluebox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.325" />

    <TextView
        android:layout_width="103dp"
        android:layout_height="21dp"
        android:text="Email Address"
        android:textSize="15.87dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.041" />

</androidx.constraintlayout.widget.ConstraintLayout>